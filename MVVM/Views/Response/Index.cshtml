@model mcpdandpcpa.Models.ResponseViewModel
@{
    ViewData["Title"] = "ResponseLog";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 class="container">Response Log</h1>

<table id="collapsable" class="table">
    <thead>
        <tr class="parentYear">
            <th>
                Year
            </th>
            <th>
                Month
            </th>
            <th>
                FileName
            </th>
            <th>
                FileType
            </th>
            <th>
                SubmitterName
            </th>
            <th>
                SubmissionDate
            </th>
            <th>
                ValidationStatus
            </th>
            <th>
                Levels
            </th>
            <th>
                SchemaVersion
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.ResponseHeaders)
        {
            <tr class="@item.trClass">
                <td>
                    @if (item.trClass == "parentYear")
                    {
                        <button class="signButton" id="@item.RecordYear">+</button>
                    }
                    @Html.DisplayFor(modelItem => item.RecordYear)
                </td>
                <td>
                    @if (item.trClass.StartsWith("parent"))
                    {
                        <button class="signButton" id="@item.RecordYear@item.RecordMonth">+</button>
                    }
                    @Html.DisplayFor(modelItem => item.RecordMonth)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FileName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FileType)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.SubmitterName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.SubmissionDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ValidationStatus)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Levels)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.SchemaVersion)
                </td>
            </tr>
        }
    </tbody>
</table>

